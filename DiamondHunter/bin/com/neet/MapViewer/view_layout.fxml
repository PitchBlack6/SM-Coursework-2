                  <DropShadow />
               </effect></Button>
            <Button layoutX="59.0" layoutY="295.0" mnemonicParsing="false" onAction="#setDefault" prefHeight="54.0" prefWidth="116.0" styleClass="button1" stylesheets="@stylesheet.css" text="Default" textAlignment="CENTER" textFill="#0a0909">
